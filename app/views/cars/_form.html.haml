= form_for(@car) do |f|
  - if @car.errors.any?
    #error_explanation
      %h2
        = pluralize(@car.errors.count, "error")
        prohibited this car from being saved:
      %ul
        - @car.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :kind
    %br/
    = f.label 'A'
    = f.radio_button :kind, 'A', checked: true
    = f.label 'B'
    = f.radio_button :kind, 'B'
    = f.label 'C'
    = f.radio_button :kind, 'C'
  .actions
    = f.submit nil, class: 'btn btn-success'
